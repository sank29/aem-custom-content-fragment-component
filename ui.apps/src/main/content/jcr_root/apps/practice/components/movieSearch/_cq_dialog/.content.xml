<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties_x0020_1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Moive Search"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        granite:class="cq-RichText-FixedColumn-column"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <movieName
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Enter Movie Name"
                                                name="./movieName"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties_x0020_1>
                    <properties_x0020_2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Padding"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        granite:class="cq-RichText-FixedColumn-column"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <topPadding
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/numberfield"
                                                fieldLabel="Top Padding (%)"
                                                name="./topPadding"
                                                useFixedInlineToolbar="{Boolean}true"/>
                                            <bottomPadding
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/numberfield"
                                                fieldLabel="Bottom Padding (%)"
                                                name="./bottomPadding"
                                                useFixedInlineToolbar="{Boolean}true"/>
                                            <leftPadding
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/numberfield"
                                                fieldLabel="Left Padding (%)"
                                                name="./leftPadding"
                                                useFixedInlineToolbar="{Boolean}true"/>
                                            <rightPadding
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/numberfield"
                                                fieldLabel="Right Padding (%)"
                                                name="./rightPadding"
                                                useFixedInlineToolbar="{Boolean}true"/>
                                        </items>
                                    </column>
                                    <dropdown
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Choose Option"
                                        name="./option"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <option1
                                                jcr:primaryType="nt:unstructured"
                                                text="Please select the width"
                                                value="100%"/>
                                            <option3
                                                jcr:primaryType="nt:unstructured"
                                                text="Small Width"
                                                value="50%"/>
                                            <option2
                                                jcr:primaryType="nt:unstructured"
                                                text="Max Width"
                                                value="25%"/>
                                        </items>
                                    </dropdown>
                                </items>
                            </columns>
                        </items>
                    </properties_x0020_2>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
